@model dynamic
@using yorokoanime.Models

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="wrapper">
    <h1>Register an Account...</h1>
    <!--<a class="loginBtn" asp-action="ExternalLogin" asp-route-provider="Microsoft">Microsoft Sign In</a>-->

    <form asp-action="Register" asp-controller="Login" method="post">
        <div class="form-group">
            <input type="text" asp-for="Username" class="form-control" placeholder="Please enter a username"/>
            <span asp-validation-for="Username" class="text-danger"></span>

            <input type="password" asp-for="Password" class="form-control" placeholder="Please enter a password"/>
            <span asp-validation-for="Password" class="text-danger"></span>

            <input type="text" asp-for="Email" class="form-control" placeholder="Please enter a valid email address"/>
            <span asp-validation-for="Email" class="text-danger"></span>

            <span class="text-danger">@ViewBag.ErrorMessage</span><br/>

            <input class="btn btn-primary" style="margin-top: 10px;" type="submit" value="Register"/>
        </div>
    </form>
</div>