<ul class="navbar-nav"> 
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="Login">
                <button type="submit" class="nav-link btn btn-link text-light">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Login" asp-action="Login">
                Login @User.Identity.Name
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Login" asp-action="Register">
                Register
            </a>
        </li>
    }
</ul>