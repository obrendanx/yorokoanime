@model yorokoanime.ViewModels.HomeModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Include the Partial View -->
@await Html.PartialAsync("_AnimeAiring", Model.TopAiringAnime)
@if (User.Identity.IsAuthenticated)
{
    @await Html.PartialAsync("_UserAnime", Model.UserAnime)
    @await Html.PartialAsync("_UserManga", Model.UserManga)
}
@await Html.PartialAsync("_TopAnime", Model.TopAnime)
@await Html.PartialAsync("_TopManga", Model.TopManga)